{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run python file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run javascript file",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Run powershell file",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}"
        },
    ]
}